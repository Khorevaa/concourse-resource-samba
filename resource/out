#!/usr/bin/env bash

set -e -u

exec 3>&1 # make stdout available as fd 3 for the result
exec 1>&2 # redirect all output to stderr for logging

source $(dirname $0)/lib/log
source $(dirname $0)/lib/crypto
source $(dirname $0)/lib/net

set_log_prefix "resource/out"
log "start"

src=$1
[ -z "$src" ] && abort "usage: ${0} <path/to/source>"

# for jq
PATH=/usr/local/bin:$PATH

version="${BUILD_PIPELINE_NAME}-${BUILD_ID}"
payload=$(mktemp -d /tmp/resource-out.XXXXXX)
request=$payload/request
response=$payload/response
archive=$payload/archive
bundle=$payload/bundle
touch $request
touch $response
touch $archive
mkdir $bundle/$version -p

###
# The request from Concourse
cat > $request <&0
log "request"

connection=$(jq -r '"//\(.source.server)/\(.source.share)"' < $request)
directory=$(jq -r '.source.directory // ""' < $request)
user=$(jq -r '.source.user // ""' < $request)
password=$(jq -r '.source.password // ""' < $request)

destination=$(jq -r '.params.destination // ""' < $request)
source=$src/$(jq -r '.params.source // ""' < $request)


log "concourse.source" $src
log "tmp.archive" $bundle/$version
log "payload.archive" $archive
log "source.connection" $connection
log "source.directory" $directory
log "params.destination" $destination

###
# Generate the archive
#
log "to-upload" $(tree $source)
cd $source && \
	cp -a ./* $bundle/$version/ && \
	tar C $bundle -cf $archive .

###
# Put the resources
# - build network command
log "connection" $connection
command=$(smb_put \
	$connection \
	$directory \
	$destination \
	$archive \
	$user \
	$password
)
# - execute network command
eval $command 2>&1

success "done"
